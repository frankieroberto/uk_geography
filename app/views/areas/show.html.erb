
<article>
  <header>
    <hgroup>
      <h1><%= @area.name %></h1>
    </hgroup>
     A <%= @area.area_type.name %>
  </header>

  <table>
    <tr><th>Population</th><td><%= rounded_population(@area.population) if @area.population %></td></tr>
  </table>

  <% if @area.parents.size > 0 %><p>Lies within <%= @area.parents.collect{ |parent| link_to(parent.name, parent.name)}.to_sentence.html_safe %><% end %>

  <footer>
    <% if @area.ons_code %><p class="code"><abbr title="Office for National Statistics">ONS</abbr> code: <%= @area.ons_code %></p><% end %>
  </footer>
</article>

